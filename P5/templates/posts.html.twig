{% extends 'template.html.twig' %}


{% block body %}
<section class="pt-5">
    <div class="container">
        <a href="{{ YOUR_BASE_URL }}/{{ MAIN_FILE }}/list/"><button class="btn btn-outline-dark mb-5">Retour Ã  la liste des billets</button></a> 
        <div class="container px-5">
            <h1 class="fw-bold">{{post.title}}</h1>
            <p class="fw-light fs-5">le {{post.creation_date_fr}}</p>
        </div> 
        <div class="row">
            <div class="post-image-container text-center">
            <img src="data:image/png;, {{post.img| url_encode}}" class="post-img" alt="...">   
            </div> 
        </div>  
        <div class="container px-5 mt-5">            
            <p class="fw-bold">{{post.content}}</p>
        </div>    
<hr class="dropdown-divider my-5">
                <h3 class="pb-5">Commentaires</h3>
<!-- Form -->

        <div class="row">
            <div class="col-4">
                <form action="index.php?action=addComment&amp;id={{post.id}}" method="post">
                    <div>
                        <label for="author" class="form-label">Auteur</label><br />
                        <input type="text" class="form-control" id="author" name="author" />
                    </div>
            </div>
            <div class="col-9">        
                    <div>
                        <label for="comment" class="form-label">Commentaire</label><br />
                        <textarea id="comment" class="form-control" name="comment"></textarea>
                    </div>
                    <div>
                        <input class="btn btn-dark mt-3" type="submit" />
                    </div>
                </form>
            </div>
        </div>
            
        </div>
    </section>     
    <section class="py-5 mt-5 bg-light">
    {% for comments in comment %}
            <div class="container py-2">
                <div class="card card-body">
                    <p><strong>{{comments.author}}</strong> le <span class='fw-light'>{{comments.comment_date_fr}}</span> </p>
                    <p>{{comments.comment}}</p>
                </div>
            </div>
    {% endfor %}
    </section>          
    {% endblock %}
